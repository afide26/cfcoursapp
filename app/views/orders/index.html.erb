<div class="pages">
  <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-offset-xs-1">
        <div class="page-header">
          <h2 class="text-center">Order</h2>
        </div>
        <div ng-controller="OrdersCtrl">
          <form class="form-inline" ng-submit="addOrder()">
            <h5 style="color:rgb(31, 73, 70); text-transform: uppercase">Add Order:</h5>
            <select ng-model="newOrder.product_id" class="form-control">
              <option value="" disabled selected>Select a product</option>
              <option ng-repeat="product in products" value="{{product.id}}">{{product.name}}</option>
            </select>
            <input type="number" step="0.01" class="form-control" placeholder="Total">
            <input type="number" class="form-control">

            <input type="submit" value="+" class="btn btn-success">
          </form>
          <br>
          <table class="table table-hover table-condensed table-responsive">
            <thead>
              <tr style="background-color:rgba(31, 73, 70, 0.95); margin: 10px auto">
                <th><h5>Product Name</h5></th>
                <th><h5>User Email</h5></th>
                <th><h5>User Actions</h5></th>
              </tr>
            </thead>
            <tbody class="orders-index">
              <tr ng-repeat="order in orders | orderBy: '-id':reverse">
                <td>
                  {{order.product.name}}
                </td>
                <td>
                  {{order.user.email}}
                </td>
                <td>
                  <button ng-click="deleteOrder(order)" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash" aria-hidder="true"></span>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>