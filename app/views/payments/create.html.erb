<%= provide(:title, "Thank You For Your Purchase") %>
<div class="pages">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1 class="text-center">Thank You From Bike Berlin</h1>
      </div>
      <div class="panel panel-default thank_you">
        <div class="panel-heading">
          <div class="panel-title">
            <h3 class="text-center" style="text-transform: capitalize">You made a great choice of buying:</h3>
          </div>
        </div>
        <div class="panel-body center-block">
          <h3 class="text-center"><%= @product.name %></h3>
          <%= image_tag(@product.image_url, class:'img-responsive center-block') %>
        </div>
        <%= link_to products_path, class:"btn btn-info" do%>
          <span class="glyphicon glyphicon-chevron-left"></span> Back
        <% end %>
      </div>
    </div>
  </div>
</div>