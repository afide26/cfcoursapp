<div class="flash">
  <% flash.each do |type, message| %>
    <% if flash[:notice] %>
    <div class="alert alert-info fade-in">
      <button class="close" data-dismiss="alert">x</button>
      <%= message %>
    </div>
    <% else %>
    <div class="alert alert-danger fade-in">
      <button class="close" data-dismiss="alert">x</button>
      <%= message %>
    </div>
    <% end %>
  <% end %>
</div>