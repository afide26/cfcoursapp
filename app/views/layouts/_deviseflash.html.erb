<div class="container flash">
  <% flash.each do |type, message| %>
    <% if flash[:notice] %>
      <div class="alert alert-info fade-in">
        <button class="close" data-dismiss="alert"><span class="glyphicon glyphicon-remove-sign"></span></button>
        <%= message %>
      </div>
    <% else %>
      <div class="alert alert-danger fade-in">
        <button class="close" data-dismiss="alert"><span class="glyphicon glyphicon-remove-sign"></button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
</div>
