
<div class="pages">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="page-header">
        <h2 class="text-center">Editing <span style="text-transform: none" ><%= @user.first_name if @user.first_name.present? %>'s Details</span> </h2>
      </div>
      <%= render 'form' %>
      <div class="actions">
        <%= link_to @user, class:"btn btn-success btn-block" do %>
          <span class="glyphicon glyphicon-eye-open"></span> Show
        <% end %>
        <%= link_to users_path, class:"btn btn-info btn-block" do  %>
          <span class="glyphicon glyphicon-chevron-left"></span> Back
        <% end %>
      </div>
    </div>
  </div>
</div>
