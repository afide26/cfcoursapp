
<div class="pages">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-offset-xs-1">
      <div class="page-header">
        <h1>Listing Users</h1>
      </div>
      <table class="table table-condensed table-responsive table-striped table-hover table-border">
        <thead>
          <tr style="background-color:rgba(31, 73, 70, 0.95); margin: 10px auto">
            <th>First name</th>
            <th>Last name</th>
            <th>Email Address</th>
            <th colspan="5">Admin Actions</th>
          </tr>
        </thead>

        <tbody class="users-index">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td style="text-transform: none"><%= user.email %></td>
              <td>
                <%= link_to user, class:"btn btn-success" do %>
                  <span class="glyphicon glyphicon-eye-open"></span> Show
                <% end %>
              </td>
              <td>
                <%= link_to edit_user_registration_path(user), class:"btn btn-warning" do %>
                  <span class="glyphicon glyphicon-wrench"></span> Edit
                <% end %>
              </td>
              <td>
                <%= link_to edit_user_path(user), class:"btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} do %>
                  <span class="glyphicon glyphicon-trash"></span> Delete
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="actions">
        <%= link_to new_user_registration_path, class:"btn btn-success btn-md pull-right" do %>
          <span class="glyphicon glyphicon-pencil"></span> New user
        <% end %>
      </div>
    </div>
  </div>
</div>


