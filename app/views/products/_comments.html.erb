<div class="product-reviews">
  <% @comments.each do |comment| %>
    <div class="row">
      <hr class="style-two">
      <div class="col-xs-12">
      <p id="commenter"><%= comment.user.first_name %><small><em> <%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
      <div class="rated" data-score="<%= comment.rating %>"%></div>
      <p><%= comment.body %></p>
      </div>
    </div>
  <% end %>
</div>